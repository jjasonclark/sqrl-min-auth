{
  "name": "express-cookie",
  "version": "0.0.1",
  "description": "SQRL authentication server using Express and Cookies",
  "engines": {
    "node": "12"
  },
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write '{src/**/*.{js,json,graphql,md},*.md,package.json,*.js}'",
    "dev": "nodemon --config nodemon.json | pino-pretty",
    "dev:db": "docker run --rm -it -p 5432:5432 -e POSTGRES_USER=sqrl -e POSTGRES_PASSWORD=sqrl -e POSTGRES_DB=sqrl postgres:latest",
    "start": "node src/index.js"
  },
  "keywords": [
    "sqrl",
    "authentication",
    "express",
    "cookie",
    "postgres"
  ],
  "author": "Jason Clark <jason@jjasonclark.com> (https://jjasonclark.com)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "config": "^3.2.4",
    "cookie-parser": "^1.4.4",
    "death": "^1.1.0",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "helmet": "^3.21.2",
    "mustache": "^3.1.0",
    "mustache-express": "^1.3.0",
    "pg": "^7.14.0",
    "pg-promise": "^10.3.1",
    "pg-sqrl-store": "file:../pg-sqrl-store",
    "pino": "^5.14.0",
    "sqrl-protocol": "file:../sqrl-protocol",
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.1",
    "pino-pretty": "^3.4.0",
    "prettier": "^1.19.1"
  }
}
